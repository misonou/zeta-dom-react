    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test (React 17)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_OPTIONS": "--experimental-vm-modules",
                "REACT_VERSION": "17"
            },
            "runtimeExecutable": "npx",
            "program": "jest",
            "args": ["--runInBand"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test (React 18)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_OPTIONS": "--experimental-vm-modules",
                "REACT_VERSION": "18"
            },
            "runtimeExecutable": "npx",
            "program": "jest",
            "args": ["--runInBand"]
        }
    ]
}
