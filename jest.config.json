{
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
        "@misonou/test-utils/mock/matchMedia",
        "@misonou/test-utils/mock/scrollBy"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/build/"
    ],
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1",
        "^zeta-dom/(.*)$": "<rootDir>/../zeta-dom/src/$1"
    },
    "extensionsToTreatAsEsm": [
        ".jsx"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/{index,entry}.js",
        "!src/include/**/*"
    ]
}
